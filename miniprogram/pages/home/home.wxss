.outerContainer {
  /* border: 1rpx solid red; */
  margin: 5rpx;
  height: 99vh;
  display: flex;
  flex-direction: column;

}

.searchBox {
  margin: 5rpx;
  border: 2rpx solid red;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  padding: 2rpx;
  align-items: center;
  /* 垂直居中对齐 */
  height: 60rpx;
}

.searchInput {
  flex: 10;
  /* border: 2rpx solid blue; */
  border-radius: 40rpx;
  margin-right: 5rpx;
}

.searchButton {
  flex: 1;
  padding: 2rpx;
  background-color: red;
  color: white;
  line-height: 50rpx;
  font-size: 25rpx;
  border-radius: 40rpx;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

.contextAll {
  flex: 1;
  margin: 5rpx;
  border: 2rpx solid red;
  display: flex;
  flex-direction: column;
}

.topClass {
  border: 2rpx solid red;
  height: 50rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
}

.innerClass {
  flex: 1;
  border-right: 5rpx double rgb(168, 165, 165);
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  margin-right: 10rpx;
  padding-right: 5rpx;  
}

.active {
  color: red;
}

.innerClass view {
  line-height: 50rpx;
  text-align: center;
}

.tab {
  display: flex;
  justify-content: space-around;
  padding: 10rpx;
  background-color: #f0f0f0;
}

.neighborhood {
  width: 300rpx;
  text-align: center;
  background-color: rgb(243, 235, 235);
  line-height: 50rpx;
  white-space: nowrap;
  /* 禁止文字换行 */
  overflow: hidden;
  /* 隐藏溢出部分 */
  text-overflow: ellipsis;
  /* 显示省略号 */
  border-radius: 30rpx;  
}

.centerContext {
  flex: 1;
  border: 2rpx solid blue;
  margin-top: 10rpx;
  flex-direction: row;
  display: flex;
  align-items:stretch;  
}

.itemClassification{
  width: 150rpx;
  border-right: 2rpx solid red;    
}
.itemClassification scroll-view{
  height: 88vh;  
}
.selected {
  color: red;
}
/* 左侧分类 */
.itemClassification view{
  border: 1rpx dotted blue;
  padding-top: 30rpx;
}

/* 中心商品展示 */
.productShow{
  /* border: 2rpx solid blue; */
  padding-left: 6rpx;
  flex: 1;  
}

.scroll-view-container{  
  height: 88vh;
}

.product{
  border-bottom: 2rpx double #ddd;
  border-top: 2rpx double #ddd;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 10rpx;
}

.product-image{
  border-radius:5rpx;  
  height: 200rpx;  
  width: 200rpx;
  padding-bottom: 2rpx;
}

.product-des{
  flex:1;
  display: flex;
  flex-direction: column;
  padding-left: 5rpx;
  overflow: hidden;  
}

.productName{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-right: 5rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  font-weight: bolder;  
  width: 30vh;
  background-color: #F8F9F9;
}
.product-description{
  flex: 1;  
  width: 30vh;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  white-space: wrap;
  text-overflow: ellipsis;
  overflow: hidden;
  
}