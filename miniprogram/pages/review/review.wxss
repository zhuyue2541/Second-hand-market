
.productShow {
  margin: 10rpx 20rpx;
}

.oneProduct {
  height: 200rpx;
  border-bottom: 1rpx solid #AAB7B8;
  display: flex;
  flex-direction: row;
}

.productImage {
  height: 100%;
  width: 160rpx;
  margin-bottom: 2rpx;
}

.content {
  margin-left: 15rpx;
  flex: 1;
  white-space: wrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.publicTime {
  display: flex;
  font-size: smaller;
}

.description {
  font-size: smaller;
}