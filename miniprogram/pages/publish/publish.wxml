<!--pages/publish/publish.wxml-->
<view class="outContainer">
  <!-- 物品名称和类别 -->
  <view class="firstLine">
    <input class="searchInput" placeholder="请输入物品名称" maxlength="140" bindinput="onInput" />
    <view class="section" style="margin-right: 10rpx;">
      <picker mode="selector" bindchange="bindPickerChange" value="{{index}}" range="{{productClassify}}">
        <view class="picker">
          {{currentClass}}
        </view>
      </picker>
    </view>
  </view>
  <!-- 物品描述 -->
  <view class="describe">
    <textarea bindinput="onInput" placeholder="物品详细描述"></textarea>

  </view>
  <!-- 上传图片 -->
  <view class="pictrue" bindtap="choosePhoto">
  <view class="pictrue1">
  <image wx:if="{{photos.length > 0}}" src="{{photos[0]}}" mode="{{pictureMode}}"></image>
  <image wx:else src="{{avatar}}" mode="aspectFit"></image>
  </view>

  <view class="pictrue2">
  <image wx:if="{{photos.length > 1}}" src="{{photos[1]}}" mode="{{pictureMode}}"></image>
  <image wx:else src="{{avatar}}" mode="aspectFit"></image>
  </view>
  <view class="pictrue3"><image wx:if="{{photos.length > 2}}" src="{{photos[2]}}" mode="{{pictureMode}}"></image>
    <image wx:else src="{{avatar}}" mode="aspectFit"></image>
  </view>
    <!-- <image src="{{avatar}}" mode="heightFix" bindtap="choosePhoto"></image> -->

  </view>
  <!-- 发布人信息选择，提交和清空按钮 -->
  <view class="submit">
  </view>
</view>