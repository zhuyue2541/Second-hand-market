<!--pages/product/product.wxml-->

<view class="outContainer">
  <view class="firstLine">
    <view>{{currentProduct.buyOrSell}}:{{currentProduct.name}}</view>
    <button hidden="{{!showLockButton}}" bind:tap="lockProduct" class="lockProduct" style="width:100rpx">锁定</button>
  </view>
  <view class="publisher">
    <view wx:if="{{isMyProduct}}" style="font-weight: bold;">
      锁定者信息
    </view>
    <view wx:else style="font-weight: bold;">
      发布者信息
    </view>
    <view class="publisherDetail">
      <block wx:if="{{isMyProduct}}">
        {{currentProduct.locker.contact}}
        <!-- <text selectable="true">微信: {{currentProduct.locker.wxName}}</text>
        <text selectable="true">电话: {{currentProduct.locker.telNo}}</text>
        <text selectable="true">地址: {{currentProduct.locker.position}}</text> -->
      </block>
      <block wx:else>
        {{currentProduct.publisher.contact}}
        <!-- <text selectable="true">微信: {{currentProduct.publisher.wxName}}</text>
        <text selectable="true">电话: {{currentProduct.publisher.telNo}}</text>
        <text selectable="true">地址: {{currentProduct.publisher.position}}</text> -->
      </block>
    </view>
  </view>
  <view class="publish-time" style="font-size: 30rpx; margin-left: 10rpx;">
    <text selectable="true">发布时间:{{currentProduct.publishTime}}</text>
    <text wx:if="{{currentProduct.endTime !== ''}}" style="padding-left:10rpx;">结束时间:{{currentProduct.endTime}}</text>
  </view>
  <view>
    <!-- <image wx:if="{{currentProduct.image}}" src="{{currentProduct.image}}" class="secondLine" mode="aspectFit"></image> -->

    <view class="pictrue" >
      <view class="pictrue1">
        <image wx:if="{{currentProduct.photos.length > 0}}" src="{{currentProduct.photos[0]}}" mode="{{pictureMode}}" data-url="{{currentProduct.photos[0]}}" bindtap="previewImage"></image>
        <image wx:else src="{{avatar}}" mode="aspectFit"></image>
      </view>

      <view class="pictrue2">
        <image wx:if="{{currentProduct.photos.length > 1}}" src="{{currentProduct.photos[1]}}" mode="{{pictureMode}}" data-url="{{currentProduct.photos[1]}}" bindtap="previewImage"></image>
        <image wx:else src="{{avatar}}" mode="aspectFit"></image>
      </view>
      <view class="pictrue3">
        <image wx:if="{{currentProduct.photos.length > 2}}" src="{{currentProduct.photos[2]}}" mode="{{pictureMode}}" data-url="{{currentProduct.photos[2]}}" bindtap="previewImage"></image>
        <image wx:else src="{{avatar}}" mode="aspectFit"></image>
      </view>
    </view>

  </view>


  <scroll-view class="thirdLine">
    <text selectable="true" style="margin-right: 20rpx; margin-left:20rpx; "> {{currentProduct.description}}</text>
  </scroll-view>
</view>